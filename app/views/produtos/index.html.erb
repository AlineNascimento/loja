<html>

<body>


<table class="table table-bordered"> 
    <thead>
        <tr>
            <th>Nome</th>
            <th>Descrição do Produto</th>
            <th>Preço</th>
            <th>Quantidade</th>
        </tr>
    </thead>
    <tbody>
        <% @produtos.each  do |produto| %>
        <tr>
            <td><%= produto.nome %></td>
            <td><%= produto.descricao %></td>
            <td><%= produto.preco %></td>
            <td><%= produto.quantidade %></td>
        </tr>
        <% end %>
    </tbody>
</table>


</body>
</html>